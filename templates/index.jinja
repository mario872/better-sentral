<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="{{url_for('static',filename='css/output.css')}}" rel="stylesheet">
    <script src="static/index.js"></script>
    <title>Sentralify</title>
    {% include 'partials/header.jinja' with context %}
</head>
<body>
<!-- Start of index.jinja -->
  <header class="bg-white shadow">
    <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900">Dashboard</h1>
    </div>
  </header>
  
  <!-- Main informational view -->
  <div id="grid" class="flex top-0 m-6 mb-12 grid grid-cols-1 md:grid-cols-3">
    <!-- Notices  -->
    <div id="notices-grid" class="m-6 grid grid-cols-1">
    <div class="ml-4 mr-4 mb-4 outline outline-blue-600">
      <p class="pl-6 font-bold">Notices</p>
    </div>
    {% set count = namespace(value=0) %}
    {% for notice in data['notices'] %}
      <div id="notice-{{ count.value }}" {% if notice['content'] != "" %} onclick="showHide('notice-{{ count.value }}-content')" onmouseleave="elementRemove('notice-{{ count.value }}-title', ' Reveal content...')" onmouseover="elementAppend('notice-{{ count.value }}-title', ' Reveal content...', 'notice-{{ count.value }}-content')" {% endif %} {%if notice['content'] != ''%} class="m-4 outline outline-blue-600 hover:outline-dashed" {% else %} class="m-4 outline outline-indigo-700 hover:outline-dashed" {% endif %} >
        <h4 id="notice-{{ count.value }}-title" {% if notice['content'] != "" %} class="text-blue-600 font-medium" {% else %} class="text-indigo-700 font-medium" {% endif %}>{{ notice['title'] }}</h4>
        {% if notice['content'] != "" %}
        <p id="notice-{{ count.value }}-content" class="hidden">{{ notice['content'] }}</p>
        {% endif %}
      </div>
      {% set count.value = count.value + 1 %}
    {% endfor %}
    </div>

    <!-- Timetable -->
    <div id="timetable-grid" class="flex top-0 m-6 grid grid-cols-1">
    {% set count = namespace(value=1) %}
    {% for day in data['timetable'] %}
      {% if day['is_today'] %}
      <table class="table-auto outline outline-blue-600">
      <th class="m-6 outline-blue-600 text-center border-collapse">Periods</th>
        {% set period_num = namespace(value=1) %}
        {% for period in day['periods'] %}
          {% if period.full_name != None %}
            <tr class="m-6">
              <td class="m-6 p-3 border-t-2 border-blue-600 border-r-2 border-blue-600">{{ period_num.value }}</td>
              <td class="m-6 p-3 border-t-2 border-blue-600">
                <table>
                  <tr>
                    <td class="pl-1">
                      {{ period.full_name }}
                    </td>
                    <td class="pr-1 float-right">
                      {{ period.room }}
                    </td>
                  </tr>
                  <tr>
                    <td class="pl-1">
                      {{ period.name }}
                    </td>
                    <td class="pr-1 float-right">
                      {{ period.teacher }}
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
            {% set period_num.value = period_num.value + 1 %}
          {% endif %}
        {% endfor %}  
      {% endif %}
    </table>
    {% set count.value = count.value + 1 %}
    {% endfor %}
    </div>

  </div>
<!-- End of index.jinja -->
{% include 'partials/footer.jinja' with context %}
</body>
</html>